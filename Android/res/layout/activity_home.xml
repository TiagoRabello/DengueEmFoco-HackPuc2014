<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projectangra.view.HomeActivity" >
    
    <org.osmdroid.views.MapView
        android:id="@+id/display_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        />
    
    <android.support.v7.widget.Toolbar
	    android:id="@+id/toolbar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#00000000"/>
     
    <com.gc.materialdesign.views.ButtonFloat
                android:id="@+id/create_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dip"
                android:background="@color/primary_color"
                materialdesign:animate="true"
                materialdesign:iconFloat="@drawable/ic_action_new" />
     
    <com.gc.materialdesign.views.ButtonFloat
                android:id="@+id/center_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dip"
                android:layout_marginBottom="12dip"
                android:layout_above="@+id/create_report"
                android:background="@android:color/white"
                materialdesign:animate="true"
                materialdesign:iconFloat="@android:drawable/ic_menu_mylocation" />
     
    <com.gc.materialdesign.views.ButtonFloat
                android:id="@+id/switch_scheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dip"
                android:layout_marginBottom="12dip"
                android:layout_above="@+id/center_camera"
                android:background="@android:color/white"
                materialdesign:animate="true"
                materialdesign:iconFloat="@android:drawable/ic_popup_sync" />

</RelativeLayout>
